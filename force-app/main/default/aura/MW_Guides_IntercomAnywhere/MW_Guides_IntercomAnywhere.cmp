<aura:component >
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />  
	<aura:registerEvent name="bubblingEvent" type="c:MW_Screen_Event" />
    
    <div aura:id="Main_Div">    
        <h1 class="slds-text-heading_large text-red">Intercom Anywhere</h1>
                 
        <p class="slds-p-top_large text-paragraph">Resources for installing and using the Intercom Anywhere app on iOS and Android smartphones.</p>
           
        <p class="slds-p-top_large text-paragraph bold">Documentation</p>
    
        <ul class="slds-list--dotted text-paragraph">
          <li><a href="https://www.control4.com/docs/product/intercom-anywhere/quick-reference/english/latest" class="slds-text-link text-paragraph" target="_blank"><u>Quick Reference Guide</u></a></li>
          <li><a href="https://www.control4.com/docs/product/intercom/solutions-guide/english/latest/" class="slds-text-link text-paragraph" target="_blank"><u>Intercom User Guide</u></a></li>
        </ul>
        
        <p class="slds-p-top_large text-paragraph bold">Software</p>    
        
         <ul class="slds-list--dotted text-paragraph">
          <li><a href="https://www.control4.com/software/intercom-anywhere-app-android/latest" class="slds-text-link text-paragraph" target="_blank"><u>Android</u></a></li>
          <li><a href="https://www.control4.com/software/intercom-anywhere-app-ios/latest" class="slds-text-link text-paragraph" target="_blank"><u>iOS</u></a></li>
        </ul>   
    
        <p class="slds-p-top_large text-paragraph bold">Videos</p>    
        
         <ul class="slds-list--dotted text-paragraph">
          <li><a onclick="{!c.Vid1Click}" class="slds-text-link text-paragraph"><u>Setting up Intercom Anywhere App on a Phone</u></a></li>
        </ul>    
    
        <div class="slds-p-top_x-large">
                <lightning:button aura:id="back" class="slds-button slds-button_neutral" label="Back" onclick="{!c.BackButtonClick}"/>
        </div>
	</div>    
    
    <div aura:id="Vid1_Div">
        <h1 class="slds-text-heading_large text-red">Setting up Intercom Anywhere App on a Phone</h1>
        <div class="slds-p-top_large model-video">
            <div class="wistia_responsive_padding" style="padding:56.25% 0 28px 0;position:relative;">
                <div class="wistia_responsive_wrapper" style="height:100%;left:0;position:absolute;top:0;width:100%;">
                    <iframe src="https://fast.wistia.net/embed/iframe/hgo75h4up8?videoFoam=true" id="Vid1" title="Setting up Intercom Anywhere App on a Phone" allowtransparency="true" frameborder="0" scrolling="no" class="wistia_embed" name="wistia_embed" allowfullscreen="" mozallowfullscreen="" webkitallowfullscreen="" oallowfullscreen="" msallowfullscreen="" width="100%" height="100%"></iframe>
                </div>
            </div>
    	</div>
        <div class="slds-p-top_large">
        <lightning:button aura:id="back" class="slds-button slds-button_neutral" label="Back" onclick="{!c.VidBackButton}"/>
    	</div>        
   </div>      
</aura:component>